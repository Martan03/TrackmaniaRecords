<div class="wrapper">
    <h1><?= $season['season_year'] . ' ' . $season['season_name']?></h1>

    <h2>Top 3:</h2>
    <div class="skewed">
        <div class="list">
            <?php foreach ($top as $t): ?>
                <div class="list-item unskewed">
                    <a href="/profile/<?= $t['record_holder'] ?>">
                        <i><?= $t['record_holder'] ?></i>
                    </a>
                    <p><?= $t['record_number'] ?></p>
                </div>
            <?php endforeach; ?>
        </div>
    
